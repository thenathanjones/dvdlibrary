<h1>Listing entries</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Plot</th>
    <th>Rating</th>
    <th>Poster</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.title %></td>
    <td><%= entry.year %></td>
    <td><%= entry.plot %></td>
    <td><%= entry.rating %></td>
    <td><%= entry.poster %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

